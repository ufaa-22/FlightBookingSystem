@model Booking

@{
    ViewData["Title"] = "DeleteBooking";
}

<h1>Delete Booking</h1>

<p>Are you sure you want to delete this booking?</p>

<div>
    <h4>Booking Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Booking ID</dt>
        <dd class="col-sm-10">@Model.BookingId</dd>

        <dt class="col-sm-2">Flight Number</dt>
        <dd class="col-sm-10">@Model.Flight.FlightNumber</dd>

        <dt class="col-sm-2">Departure Airport</dt>
        <dd class="col-sm-10">@Model.Flight.DepartureAirport</dd>

        <dt class="col-sm-2">Departure Time</dt>
        <dd class="col-sm-10">@Model.Flight.DepartureTime.ToShortTimeString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.BookingId" method="post">
    @Html.AntiForgeryToken() <!-- CSRF protection -->
    <input type="hidden" asp-for="BookingId" /> <!-- Ensure this field binds to BookingId -->
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
    </div>
</form>

