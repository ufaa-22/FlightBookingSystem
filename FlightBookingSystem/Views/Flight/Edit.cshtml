@model Flight

@{
    ViewData["Title"] = "Edit Flight";
}

<h2>Edit Flight</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="FlightId" />
    <div class="form-group">
        <label asp-for="FlightNumber" class="control-label"></label>
        <input asp-for="FlightNumber" class="form-control" />
        <span asp-validation-for="FlightNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureAirport" class="control-label"></label>
        <input asp-for="DepartureAirport" class="form-control" />
        <span asp-validation-for="DepartureAirport" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalAirport" class="control-label"></label>
        <input asp-for="ArrivalAirport" class="form-control" />
        <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartureTime" class="control-label"></label>
        <input asp-for="DepartureTime" class="form-control" type="datetime-local" value="@Model.DepartureTime.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ArrivalTime" class="control-label"></label>
        <input asp-for="ArrivalTime" class="form-control" type="datetime-local" value="@Model.ArrivalTime.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalSeats" class="control-label"></label>
        <input asp-for="TotalSeats" class="form-control" />
        <span asp-validation-for="TotalSeats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookedSeats" class="control-label"></label>
        <input asp-for="BookedSeats" class="form-control" />
        <span asp-validation-for="BookedSeats" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BasePrice" class="control-label"></label>
        <input asp-for="BasePrice" class="form-control" />
        <span asp-validation-for="BasePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<FlightStatus>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
