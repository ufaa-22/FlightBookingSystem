@model IEnumerable<Flight>

@{
    ViewData["Title"] = "Step 2: Available Flights";
}

<h2 class="text-center"> Available Flights</h2>

<table class="table table-striped table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Flight ID</th>
            <th>From</th>
            <th>To</th>
            <th>Available Seats</th>
            <th>Date</th>
            <th>Base Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.FlightNumber</td>
                <td>@flight.DepartureAirport</td>
                <td>@flight.ArrivalAirport</td>
                <td>@(flight.TotalSeats - flight.BookedSeats)</td>
                <td>@flight.DepartureTime.ToShortDateString()</td>
                <td>@flight.BasePrice</td>
                <td>
                    <form asp-action="Step2" method="post">
                        <input type="hidden" name="flightId" value="@flight.FlightId" />
                        <button type="submit" class="btn btn-primary">Select Flight</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Step1" class="btn btn-secondary mt-3">Back to Search</a>
