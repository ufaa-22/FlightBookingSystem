@model List<PassengerDto>

@{
    ViewData["Title"] = "Step 3: Passenger Information";
}

<h2 class="text-center"> Passenger Information</h2>

<form asp-action="Step3" method="post" class="mt-4">
    @for (int i = 0; i < Model.Count; i++)
    {
        <h4>Passenger @(i + 1)</h4>
        <div class="form-group">
            <label asp-for="@Model[i].FullName"></label>
            <input asp-for="@Model[i].FullName" class="form-control" placeholder="Full Name" />
            <span asp-validation-for="@Model[i].FullName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model[i].PassportNumber"></label>
            <input asp-for="@Model[i].PassportNumber" class="form-control" placeholder="Passport Number" />
            <span asp-validation-for="@Model[i].PassportNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model[i].DateOfBirth"></label>
            <input asp-for="@Model[i].DateOfBirth" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")"  />
           
            <span asp-validation-for="@Model[i].DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model[i].Nationality"></label>
            <input asp-for="@Model[i].Nationality" class="form-control" placeholder="Nationality" />
            <span asp-validation-for="@Model[i].Nationality" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Continue to Payment</button>
</form>

<a asp-action="Step2" class="btn btn-secondary mt-3">Back to Select Flight</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
